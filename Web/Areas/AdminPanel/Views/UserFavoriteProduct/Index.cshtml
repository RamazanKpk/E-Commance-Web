@model IEnumerable<Entity.UserFavoriteProduct>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">User Favorite Product List</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" id="selectAll" />
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Product.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User.Name)
                        </th>
                    </tr>

                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" class="selectRow" data-id="@item.Id" />
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Product.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Name)
                        </td>
                    </tr>
                }

            </table>
            <div>
                @*<button type="submit" id="editButton" class="btn btn-outline-primary">Edit</button>*@
                <button id="detailsButton" class="btn btn-outline-warning">Details</button>
                <button type="submit" id="deleteButton" class="btn btn-outline-danger">Delete</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/js/favoriteProduct.js"></script>