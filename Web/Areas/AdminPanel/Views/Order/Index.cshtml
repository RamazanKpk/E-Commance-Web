@model IEnumerable<Entity.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">Order List</h4>
    </div>
    <div class="col text-right">
        @Html.ActionLink("Create", "Create", "Order", null, new { @class = "btn btn-primary float-right" })
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" id="selectAll" />
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Product.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductUnitPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiscountRate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsCompleated)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsCanceled)
                        </th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" class="selectRow" data-id="@item.Id" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductUnitPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiscountRate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsCompleated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsCanceled)
                        </td>
                    </tr>
                }

            </table>
            <div>
                <button type="submit" id="editButton" class="btn btn-outline-primary">Edit</button>
                <button id="detailsButton" class="btn btn-outline-warning">Details</button>
                <button type="submit" id="deleteButton" class="btn btn-outline-danger">Delete</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/js/order.js"></script>