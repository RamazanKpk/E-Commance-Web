@model IEnumerable<Entity.ProductImage>

@{
    ViewBag.Title = "Images";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

@*<p>
    @Html.ActionLink("Create Image", "AddImage", new { productId = @Request.Params["productId"] }, new { @class = "btn btn-success pull-right" })
</p>*@
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">Product Image List</h4>
    </div>
    <div class="col text-right">
        @Html.ActionLink("Create", "Create", "Product", null, new { @class = "btn btn-primary float-right" })
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Product.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsDefaultImage)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Deleted)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Title)
                        </td>
                        <td>
                            <img src="~/Content/images/@item.ImagePath" style="width:100px; height:80px; object-fit:cover" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDefaultImage)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Deleted)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new {@class= "btn btn-outline-primary"})
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>