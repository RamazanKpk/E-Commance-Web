                            @{
                                var selectList = ViewBag.UserGroupId as SelectList;
                                if (selectList != null)
                                {
                                    @Html.DropDownListFor(model => model.UserGroupId, selectList, "Select Title", htmlAttributes: new { @class = "form-control" })
                                }
                            }

                            @Html.ValidationMessageFor(model => model.UserGroupId, "", new { @class = "text-danger" })
                        </div>
                    </div>

