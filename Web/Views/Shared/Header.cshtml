@model IEnumerable<DataModel.CategoryViewModels.CategoryListModel>

<!-- Offcanvas Menu Begin -->
<div class="offcanvas-menu-overlay"></div>
<div class="offcanvas-menu-wrapper">
    <div class="offcanvas__close">+</div>
    <ul class="offcanvas__widget">
        <li><span class="icon_search search-switch"></span></li>
        <li>
            <a href="@Url.Action("FavoriteProduct","FavoriteProduct")">
                <span class="icon_heart_alt"></span>
                <div class="tip">@ViewBag.FavoriteProduct</div>
            </a>
        </li>
        <li>
            <a href="@Url.Action("ShopCart","ShopCart")">
                <span class="icon_bag_alt"></span>
                <div class="tip">@ViewBag.CartItem</div>
            </a>
        </li>
    </ul>
    <div class="offcanvas__logo">
        <a href="@Url.Action("Index","Home")"><img src="~/Content/ashion-master/img/logo.png" alt=""></a>
    </div>
    <div id="mobile-menu-wrap"></div>
    <div class="offcanvas__auth">
        <a href="@Url.Action("Login","Authentication")">Login</a>
        <a href="@Url.Action("Register","Authentication")">Register</a>
    </div>
</div>
<!-- Offcanvas Menu End -->
<!-- Header Section Begin -->
<header class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-3 col-lg-2">
                <div class="header__logo">
                    <a href="@Url.Action("Index", "Home")"><img src="~/Content/ashion-master/img/logo.png" alt=""></a>
                </div>
            </div>
            <div class="col-xl-6 col-lg-7">
                <nav class="header__menu">
                    <ul>
                        <li>
                        <a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li><a href="@Url.Action("Shop", "Product")">Shop</a></li>
                        <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3">
                <div class="header__right">
                    <div class="header__right__auth">
                        <a href="@Url.Action("Login","Authentication")">Login</a>
                        <a href="@Url.Action("Register","Authentication")">Register</a>
                    </div>
                    <ul class="header__right__widget">
                        <li><span class="icon_search search-switch"></span></li>
                        <li>
                            <a href="@Url.Action("FavoriteProduct","FavoriteProduct")">
                                <span class="icon_heart_alt"></span>
                                <div class="tip">@ViewBag.FavoriteProduct</div>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("ShopCart","ShopCart")">
                                <span class="icon_bag_alt"></span>
                                <div class="tip">@ViewBag.CartItem</div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="canvas__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>
<!-- Header Section End -->
